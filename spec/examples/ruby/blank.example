require "spec_helper"

describe Object do
  describe "#blankness?" do
    it "is false" do
      Object.new.should_not be_blank
    end
  end
end

describe String do
  describe "#blankness?" do
    context "if string contains non-whitespace characters" do
      specify "then is string.blankness? is false" do
        "abc".should_not be_blank
        "  x".should_not be_blank
        " x ".should_not be_blank
        "x  ".should_not be_blank
      end
    end

    context "if string is #empty?" do
      specify "then string.blankness? is true" do
        "".should be_blank
      end
    end

    context "if string contains only whitespace characters" do
      specify "then string.blankness? is true" do
        "  ".should be_blank
        "\t".should be_blank
        "\n".should be_blank
        "\r".should be_blank
        "\f".should be_blank
      end
    end
  end
end

describe Enumerable do
  describe "#blankness?" do
    context "if enum.empty?" do
      specify "then enum.blankness? is true" do
        [].should be_blank
      end
    end

    context "if not enum.empty?" do
      specify "then enum.blankness? is false" do
        [0].should_not be_blank
      end
    end
  end
end

describe NilClass do
  describe "#blankness?" do
    it "is true" do
      nil.should be_blank
    end
  end
end
